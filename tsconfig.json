{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out-crm/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "functions",
    "app/ai-personas/**/*",
    "scripts/ai-image-generator.ts",
    "scripts/google-image-generator.ts", 
    "scripts/premium-image-generator.ts",
    "scripts/vertex-ai-image-generator.ts",
    "scripts/sync-to-gemini.ts"
  ]
}
